{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ESNext",
    "resolveJsonModule": true,
    /* Modules */
    "module": "commonjs",
    /* Emit */
    "outDir": "./dist",
    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    /* Type Checking */
    "strict": true,
    /* Completeness */
    "skipLibCheck": true
  },
  "exclude": ["src/__tests__"]
}
